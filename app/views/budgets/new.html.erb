<%= render 'shared/navbar', {text:"Add Budget", path:budgets_path, visible:"visible"}%>

<div class="container-fluid py-3">
  <%= form_with(model: @budget, url: budgets_path, method: :post) do |form| %>
    <div class="mb-3">
      <%=form.text_field :name, class: "form-control", placeholder: 'Name', required: true %>
    </div>
    <div class="mb-3">
      <%= form.text_field :icon, class: "form-control", placeholder: 'Icon URL', required: true %>
    </div>
    <div class="d-grid">
      <%= form.submit "Save", class: "btn btn-success" %>
    </div>
  <%end%>
</div>
